<%flags>inherit => '/page.mhtml'</%flags>

<%method subtitle>
<%args>
$article
</%args>
<% $article->title |h %>
</%method>

<%method content>
<%args>
$article
$prev => undef
$next => undef
</%args>

<h1 class='title'><% $article->title |h %></h1>
<div class='subtitle'><% $article->topic |h %> - <% $article->date->ymd %></div>

<% $article->body_html %>

<div id='author'>
<img alt='Gravatar Image' style='vertical-align:middle' src=<% Gravatar::URL::gravatar_url(
  email  => $article->author_email,
  rating => 'g',
  size   => 80,
  default => 'retro',
) %> />
This article contributed by: <% $article->author |h %>
</div>

<ul id="pager">
% if ($prev) {
    <li class="previous"><a title="<% $prev->title |h %>" href="<% $prev->date->ymd %>.html">Previous</a></li>
% } else {
    <li class="previous">Previous</li>
% }

% if ($next) {
    <li class="next"><a title="<% $next->title |h %>" href="<% $next->date->ymd %>.html">Next</a></li>
% } else {
    <li class="next">Next</li>
% }
</ul>
<div style="clear: both"></div>
</%method>
